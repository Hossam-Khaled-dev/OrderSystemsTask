@using Order.Entity.ViewModels;


@model OrderItemViewModel

<h2>Delete Order Item</h2>

<p>Are you sure you want to delete the following order item?</p>

<div>
    <h4>Order Item Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        
        <dt class="col-sm-2">Name</dt>
@*        <dd class="col-sm-10">@Model.Name</dd>
*@        
        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>
        
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>
    </dl>
</div>

@using (Html.BeginForm("DeleteConfirmed", "OrderItem", new { id = Model.Id }, FormMethod.Post))
{
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
}
