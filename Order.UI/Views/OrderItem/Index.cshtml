@using Order.Entity.ViewModels;

@model IEnumerable<OrderItemViewModel>

<h2>Order Item List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order Item ID</th>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = item.Id })">Delete</a> |
                    <a href="@Url.Action("Details", new { id = item.Id })">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Create New Order Item</a>
