

<h2>Bill Details</h2>

<h3>Order Items</h3>

<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var orderItem in ViewBag.OrderItems)
        {
            <tr>
                <td>@orderItem.ProductName</td>
                <td>@orderItem.Price</td>
                <td>@orderItem.Quantity</td>
                <td>@(orderItem.Price * orderItem.Quantity)</td>
            </tr>
        }
    </tbody>
</table>

<h3>Total Price</h3>
<p>Total Price: @ViewBag.TotalPrice</p>

